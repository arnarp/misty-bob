{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "outDir": "mb-cli",
    "sourceMap": true,
    "target": "es6",
    "rootDir": "src"
  },
  "include": ["src/cli/**/**.*"],
  "exclude": [
    "node_modules",
    "build",
    "build_functions",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
