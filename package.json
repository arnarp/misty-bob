  "private": true,
  "dependencies": {
    "chalk": "^2.4.0",
    "classnames": "^2.2.5",
    "commander": "^2.15.1",
    "draft-js": "^0.10.5",
    "draft-js-export-html": "^1.2.0",
    "firebase": "4.12.1",
    "firebase-admin": "^5.12.0",
    "firebase-functions": "^1.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "normalize.css": "^8.0.0",
    "ora": "^2.0.0",
    "prettier": "^1.11.1",
