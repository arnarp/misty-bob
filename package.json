    "@types/react-side-effect": "^1.0.6",
    "@types/react-transition-group": "^2.0.7",
    "@types/uuid": "^3.4.3",
    "typescript": "^2.7.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
